{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "background": null,
    "title": {
      "text": "Share of Electorate by Race",
      "fontSize": 25,
      "font": "Serif"
    },
    "view": { "stroke": null },
  
    
    "data": {
      "url": "data/votebyrace.csv"
    },"transform": [
        
        {
          "calculate": "datum.Share * 100",
          "as": "PercentOfTotal"
        }
      ],
    
  
   
    "encoding": {
      "x": { "field": "PercentOfTotal", "type": "quantitative","scale": {
        "type": "linear",
        "domain": [0,100]
        },"axis":{"grid": false}},
      "y": { "field": "Year", "type": "ordinal", "sort": "-y" },
      "color": {"field":"Race", "type":"nominal", "sort":"-y",
        "scale": {
          "type": "threshold",
          "domain": ["Non-Hispanic White","Non-Hispanic Black","Hispanic","Other"],
          "range": ["#4169e1", "#cf383c","#FF8103","#0C775E"]
        },"legend":null}
    
    },
    "layer": [
      {
        "mark": {
          "type": "bar"
          
        }
      }
    ]
  }
  