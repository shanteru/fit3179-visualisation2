{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
  "background": null,
  "height":300,
  "title": {
    "text": "How 2020 turnout compares to other high-turnout presidential election",
    "fontSize": 25,
    "font": "Serif"
  },
  "view": { "stroke": null },
    "data": {
        "url": "data/yearly_turnout.csv"
    },
    "params": [
      {
        "name": "highlight",
        "select": {"type": "point"}
      },
      {
        "name": "hover",
        "select": {"type": "point", "on": "mouseover"}
      },
      {
        "name": "Year_selection",
        "bind": {
          "input": "select",
          "options": ["1" ,"0"],
          "labels": [ "High-turnout Years","Show All"],
          "name": "Select Year: "
        }
      }
    ], "transform": [
    
        { "filter": " datum.High == Year_selection || datum.High == 1 " },{
          "calculate": "datum.vep_turnout *1", "as": "Turnout"
        }
        
      ],
      "layer":[
          {
            "mark": {
                "type": "bar",
                "fill": { "expr": "datum.Year == 2020 ? '#2e856e': '#ddd'" },
                "stroke": "black",
                "cursor": "pointer",
                "cornerRadiusBottomRight": 10, "cornerRadiusTopRight": 10
              },
              "encoding": {
                "x": {"field": "Turnout", "type": "quantitative","axis": null},
                "y": {"field": "Year", "type": "ordinal","sort": "-y" ,"axis":{"title":null,"labelFontSize":23,"labelFont": "Lato"}},"tooltip":[
                  {
                    "field": "Year",
                    "type": "ordinal"
                  },{
                    "field": "Turnout",
                    "type": "quantitative",
                    "format":".1f"
                  },{
                    "field": "Note",
                    "type": "nominal"
                  }
            
                ],
                "stroke": {
                  "condition": [
                  {
                    "param": "hover",
                    "empty": false,
                    "value": "black"
                  }
                ],
                  "value": null
                },
                "opacity": {
                  "condition": [{"param": "hover", "value": 5}],
                  "value": 0.5
                }
                
              }
          },{"layer":[
            {
                "mark":{
                    "type": "text"
                }
            }
          ]}
          
      ]
    ,
    "config": {
      "scale": {
        "bandPaddingInner": 0.2
      }
    }
  }