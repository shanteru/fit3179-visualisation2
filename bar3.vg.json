{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "background": null,
    "title": {
      "text": "Share of Electorate by Race",
      "fontSize": 25,
      "font": "Serif"
    },
    "view": { "stroke": null },
  
    
    "data": {
      "url": "data/votebyrace.csv"
    },"transform": [
        {
          "frame": [null, null]
        },
        
        {
          "calculate": "datum.Share * 100",
          "as": "PercentOfTotal"
        }
      ],
    
  
   
    "encoding": {
      "x": { "field": "PercentOfTotal", "type": "quantitative" },
      "y": { "field": "Year", "type": "ordinal", "sort": "-y" },
      "color": {"field":"Race", "type":"nominal", "sort":"-y"}
    
    },
    "layer": [
      {
        "mark": {
          "type": "bar"
          
        }
      }
    ]
  }
  